{
    "name": "node-react-starter-app",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@material-ui/core": "^4.11.3",
        "@material-ui/icons": "^4.11.2",
        "clsx": "^1.1.1",
        "concurrently": "^6.0.0",
        "cors": "^2.8.5",
        "express": "^4.17.1",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "react-scripts": "4.0.3",
        "web-vitals": "^1.1.0",
        "webpack": "4.44.2"
    },
    "devDependencies": {
        "@babel/eslint-plugin": "^7.12.13",
        "@testing-library/jest-dom": "^5.11.9",
        "@testing-library/react": "^11.2.5",
        "@testing-library/user-event": "^12.7.2",
        "babel-eslint": "^10.1.0",
        "babel-loader": "8.1.0",
        "eslint": "^7.11.0",
        "eslint-config-prettier": "^6.10.1",
        "eslint-config-react-app": "^5.2.1",
        "eslint-loader": "^4.0.0",
        "eslint-plugin-babel": "^5.3.0",
        "eslint-plugin-import": "^2.20.2",
        "eslint-plugin-jest": "^23.20.0",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-prettier": "^3.1.3",
        "eslint-plugin-react": "^7.19.0",
        "eslint-plugin-react-hooks": "^3.0.0",
        "eslint-utils": "^1.4.2",
        "husky": "^4.3.7",
        "jest": "26.6.0",
        "lint-staged": "^10.2.11",
        "nodemon": "^2.0.7",
        "prettier": "^2.2.1",
        "pretty-quick": "^3.1.0",
        "supertest": "^6.1.3",
        "wait-on": "^5.2.1",
        "webpack-cli": "^4.3.1",
        "webpack-node-externals": "^2.5.2"
    },
    "scripts": {
        "dev:client": "wait-on -l tcp:3001 && react-scripts start",
        "dev:server:webpack": "webpack --config webpack.config.server.js --watch",
        "dev:server:nodemon": "rm -f build/server.js && wait-on -l build/server.js && nodemon build/server.js",
        "dev:server": "concurrently -p name -c \"yellow,magenta\" -n \"webpack-server,nodemon-server\" \"npm run dev:server:webpack\" \"npm run dev:server:nodemon\"",
        "docker:down": "docker-compose down",
        "docker:up": "docker-compose up",
        "start:dev": "concurrently -p name -c \"yellow,magenta,blue\" -n \"webpack-server,nodemon-server,CRA\" \"npm run dev:server:webpack\" \"npm run dev:server:nodemon\" \"npm run dev:client\"",
        "start": "concurrently \"react-scripts start\" \"node build/server.js\"",
        "build:client": "react-scripts build",
        "build:server": "webpack --config webpack.config.server.js",
        "build": "npm run build:client && npm run build:server",
        "lint": "eslint .",
        "pre-commit": "lint-staged",
        "prettier:format": "prettier --write src",
        "prettier:check": "prettier --check src",
        "test": "react-scripts test --watchAll=false",
        "eject": "react-scripts eject"
    },
    "proxy": "http://localhost:3001",
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "lint-staged": {
        "*.js": [
            "pretty-quick --staged",
            "eslint . --fix"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run pre-commit",
            "pre-push": "npm test"
        }
    }
}
